<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
	<constant name="struts.action.extension" value=","/>
    <constant name="struts.enable.SlashesInActionNames" value="true" />

    <package name="default" namespace="/" extends="json-default">

        <default-action-ref name="index"/>

        <action name="index" class="com.mbe.gigaGallerie.actions.IndexAction" method="index" >
            <result name="success">/index.jsp</result>
        </action>
         <action name="tag/liste" class="com.mbe.gigaGallerie.actions.TagAction" method="liste" >
            <result name="success" type="json">
            	<param name="root">tags</param>
            	<param name="excludeProperties">
            		.*photos.*
            	</param>
            </result>
        </action>
         <action name="tag/find/*" class="com.mbe.gigaGallerie.actions.TagAction" method="findOne" >
         	<param name="tagID">{1}</param>
            <result name="success" type="json">
            	<param name="root">tag</param>
            	<param name="excludeProperties">
            		.*photos.*
            	</param>
            </result>
        </action>
         <action name="tag/save" class="com.mbe.gigaGallerie.actions.TagAction" method="save" >
            <result name="success" type="json">
            	<param name="root">tag</param>
            	<param name="excludeProperties">
            		.*photos.*
            	</param>
            </result>
        </action>
        
        <action name="photo/liste" class="com.mbe.gigaGallerie.actions.PhotoAction" method="liste" >
            <result name="success" type="json">
            	<param name="root">photos</param>
            	<param name="excludeProperties">
            		.*galerie.*,
            		.*tags.*
            	</param>
            </result>
        </action>
         <action name="photo/find/*" class="com.mbe.gigaGallerie.actions.PhotoAction" method="findOne" >
         	<param name="photoID">{1}</param>
            <result name="success" type="json">
            	<param name="root">photo</param>
            	<param name="excludeProperties">
            		.*galerie.*,
            		.*tags.*
            	</param>
            </result>
        </action>
        <action name="photo/save" class="com.mbe.gigaGallerie.actions.PhotoAction" method="save" >
            <result name="success" type="json">
            	<param name="root">photo</param>
            	<param name="excludeProperties">
            		.*galerie.*,
            		.*tags.*
            	</param>
            </result>
        </action>
        <action name="photo/upload" class="com.mbe.gigaGallerie.actions.PhotoAction" method="saveWithUpload" >
            <result name="success" type="json">
            	<param name="root">photo</param>
            	<param name="excludeProperties">
            		.*galerie.*,
            		.*tags.*
            	</param>
            </result>
        </action>
        
        <action name="photo/addTag/*/*" class="com.mbe.gigaGallerie.actions.PhotoAction" method="addTag" >
        	<param name="photoID">{1}</param>
        	<param name="tagID">{2}</param>
            <result name="success" type="json">
            	<param name="root">tag</param>
            	<param name="excludeProperties">
            		.*photos.*,
            	</param>
            </result>
        </action>
        
        <action name="photo/removeTag/*/*" class="com.mbe.gigaGallerie.actions.PhotoAction" method="removeTag" >
        	<param name="photoID">{1}</param>
        	<param name="tagID">{2}</param>
            <result name="success" type="json">
            	<param name="root">tag</param>
            	<param name="excludeProperties">
            		.*photos.*,
            	</param>
            </result>
        </action>
        
        <action name="photo/affiche/*"
        		class="com.mbe.gigaGallerie.actions.PhotoAction"
        		method="affiche" >
        	<param name="photoID">{1}</param>
            <result name="success" type="stream">
            	<param name="inputName">photoStream</param>
            	<param name="contentType">${photoContentType}</param>
            	<param name="contentDisposition">attachment;filename="${photoFileName}"</param>
            </result>
        </action>

        <action name="photo/filter/*"
        		class="com.mbe.gigaGallerie.actions.PhotoAction"
        		method="findByTags" >
        	<param name="includedtags">{1}</param>
            <result name="success" type="json">
            	<param name="root">photos</param>
            	<param name="excludeProperties">
            		.*tags.*,
            		.*galerie.*
            	</param>
            </result>
        </action>

    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
