<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
	<constant name="struts.action.extension" value=","/>
    <constant name="struts.enable.SlashesInActionNames" value="true" />

    <package name="default" namespace="/" extends="json-default">

        <default-action-ref name="index"/>

        <action name="index" class="com.mbe.firstStrutsSpringJpa.actions.IndexAction" method="index" >
            <result name="success">/index.jsp</result>
        </action>

        <action name="edit/*" class="com.mbe.firstStrutsSpringJpa.actions.IndexAction" method="edit" >
            <param name="id">{1}</param>
            <result name="success">/edit.jsp</result>
            <result name="notfound" type="redirect">/index</result>
        </action>
        
        <action name="create" class="com.mbe.firstStrutsSpringJpa.actions.IndexAction" method="create" >
            <result name="success">/edit.jsp</result>
        </action>
        
        <action name="save" class="com.mbe.firstStrutsSpringJpa.actions.IndexAction" method="save" >
            <result name="success" type="redirect">/index</result>
            <result name="input">/edit.jsp</result>
        </action>
        
        <action name="remove/*" class="com.mbe.firstStrutsSpringJpa.actions.IndexAction" method="remove" >
            <param name="id">{1}</param>
            <result name="success" type="redirect">/index</result>
        </action>
        

    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
